<?xml version="1.0" encoding="utf-8" ?>
<!-- This assumes the amazons3 module is in sites/all/modules and Composer
     Manager is using sites/all/vendor. -->
<phpunit bootstrap="../../vendor/autoload.php">

    <testsuites>
        <testsuite name="Amazon S3 Test Suite">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <blacklist>
            <directory>../../vendor</directory>
        </blacklist>
    </filter>

</phpunit>
